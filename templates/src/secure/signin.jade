block content
    script.
        var referer = "#{referer}";

    div(class="well signin")
        form.row(role="form")
            div.col-md-3
            div.col-md-6
                div.signin-avatar
                    img#avatar.img-circle(src="/images/default-avatar.gif")
                    br
                    div.avatar-loading-div
                        img#avatar-loading(src="/images/loading.gif")
                div.form-group
                    label(for="username") <你的用户名咩 />
